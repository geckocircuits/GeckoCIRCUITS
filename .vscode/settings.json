{
    // Java Configuration
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "disabled",
    "java.errors.incompleteClasspath.severity": "ignore",

    // Pragmatic warning suppression - disable specific problem types
    "java.compliance": "21",
    "java.format.enabled": true,
    "java.saveActions.organizeImports": false,
    "java.autobuild.enabled": true,

    // Disable specific Eclipse JDT analysis warnings
    "java.codeGeneration.useProjectSettings": true,
    "java.depend.autoRefresh": "disabled",
    "java.import.generate": "ignore",
    "java.import.excludes": "",

    // Problem severity settings - set most warnings to "ignore" or "hint"
    "java.errors.incompleteClasspath.severity": "ignore",

    // Disable specific warning categories
    "java.completion.enabled": false,
    "java.signatureHelp.enabled": false,
    "java.referencesCodeLens.enabled": false,
    "java.implementationsCodeLens.enabled": false,
    "java.foldingRange.enabled": true,
    "java.maxConcurrentBuilds": 1,
    "java.sources": "21",

    // Project paths
    "java.project.sourcePaths": [
        "src/main/java"
    ],
    "java.project.outputPath": "target/classes",
    "java.project.referencedLibraries": [
        "target/*.jar"
    ],

    // Maven Configuration
    "maven.executable.path": "mvn",
    "maven.terminal.useJavaHome": true,

    // Editor Settings for Java
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // File Associations
    "files.associations": {
        "*.ipes": "xml"
    },

    // Files to exclude from explorer
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/target": false
    },

    // Search settings
    "search.exclude": {
        "**/target": true,
        "**/node_modules": true
    },

    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash"
        }
    },

    // Java debug settings
    "java.debug.settings.enableRunDebugCodeLens": true
}
